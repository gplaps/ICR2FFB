# source: https://stackoverflow.com/questions/17653738/recursive-cmake-search-for-header-and-source-files
MACRO(RECURSIVE_DIR_LIST SUB_DIRS FROM)
FILE(GLOB_RECURSE DIRECTORIES ${FROM}/*)
SET(TMP_DIRLIST "")
FOREACH(DIR ${DIRECTORIES})
    GET_FILENAME_COMPONENT(DIR_PATH ${DIR} PATH)
    list(APPEND TMP_DIRLIST ${DIR_PATH})
ENDFOREACH()
list(REMOVE_DUPLICATES TMP_DIRLIST)
SET(${SUB_DIRS} ${TMP_DIRLIST})
ENDMACRO()
